all posts handlebars

<div class="posts">
  {{#each posts}}
  <div class="card">
    <div class="card-header flex-row">
      <h2>
        <a href="/post/{{id}}">{{post_title}}</a>
      </h2>
      <div>
        {{!-- date of post --}}
      </div>
    </div>
    <div class="card-body">
      {{!-- {{body}} --}}
      date of post
    </div>
  </div>
  {{/each}}
</div>