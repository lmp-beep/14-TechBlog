<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-12">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>

    <p>{{content}}</p>

    <p class="created-by">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>

</div>
{{/each}}