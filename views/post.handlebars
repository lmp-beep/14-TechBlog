<div class="">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p class="created-by">Created by {{user.name}} on {{format_date date_created}}</p>
  {{!-- <p><a href="/comment/{{post.id}}">Comment</a></p> --}}

  {{#if comments.length}}
  <div class="col post-list">
    <p>Comments:</p>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>
          {{!-- <a href="/post/{{post.id}}"> --}}
            {{comment.body}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

{{#if logged_in}}
<div class="row mt-4">
  <div class="col-md-6">
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-content">Comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Comment</button>
      </div>
    </form>
  </div>
  {{else}}
</div>
{{/if}}

</div>

<script src="/js/comment.js"></script>